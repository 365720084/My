<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="colorAccent">@color/color_primary_yellow</item>
        <item name="colorControlNormal">@color/color_primary_yellow</item>
    </style>

    <style name="AppMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="AppWhiteTheme" parent="AppMainTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
    </style>

    <style name="Animation.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="Translucent">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AlphaDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="TransDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText" parent="WrapContent">
        <item name="android:id">@id/text_title</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">170dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TitleTextCommon" parent="WrapContent">
        <item name="android:id">@id/text_title</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TitleBarGroup">
        <item name="android:id">@id/view_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TitleBarBlack" parent="TitleBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TitleBarImageViewer" parent="TitleBar">
        <item name="android:background">@color/image_viewer_bar</item>
    </style>

    <style name="TitleBarWhite" parent="TitleBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabTextCheckStyle">
        <item name="android:textColor">@color/yellow_d</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TabTextNormalStyle">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTestDialogStyle">
        <item name="android:windowBackground">@color/color_for_half_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="Widget.GifView" parent="@android:style/Widget" />

    <style name="TitleDiving">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="TitleNewsDiving">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/bg_lm_background</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/bg_lm_background</item>
        <!--api 19-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="main_tabs_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeDialogAct" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/trans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
    </style>

    <style name="ThemeRedBag" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/trans_half</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
    </style>



    <style name="FullScreenActivity" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Media Controller -->
    <style name="video_progressbar_style">
        <item name="android:maxWidth">43.0dip</item>
        <item name="android:maxHeight">43.0dip</item>
        <item name="android:minWidth">43.0dip</item>
        <item name="android:minHeight">43.0dip</item>
    </style>

    <declare-styleable name="CountDownRelativeLayout">
        <attr name="text" format="string" />
        <attr name="text_size" format="float" />
        <attr name="text_color" format="color" />
    </declare-styleable>

    <style name="LiveBottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommentDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>
