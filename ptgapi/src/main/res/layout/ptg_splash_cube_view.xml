<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">


    <com.ptg.ptgapi.component.CubeLayout
        android:id="@+id/cubeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clipChildren="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:scaleType="fitXY"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:scaleType="fitXY"></ImageView>

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="83.5dp"
            android:layout_centerInParent="true"
            android:background="@color/white">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
               ></ImageView>

            <TextView
                android:id="@+id/buyNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11.5dp"
                android:text="@string/buynow"
                android:textColor="@color/CS_black"
                android:textSize="@dimen/buy_now" />

        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/middle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            app:lottie_autoPlay="false"
            app:lottie_fileName="slope_black.json"
            app:lottie_loop="false" />
    </com.ptg.ptgapi.component.CubeLayout>


    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hint_left"
        android:textColor="@color/white"
        android:visibility="gone" />


</RelativeLayout>